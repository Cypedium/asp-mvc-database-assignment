@model Student
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<br />

<form asp-action="Edit" asp-controller="Students" method="post" class="btn btn-info">
    <font style="align-content: stretch">

        <div asp-validation-summary="All"></div>

        <label asp-for="F_Name"></label>
        <input asp-for="F_Name" />
        <span asp-validation-for="F_Name"></span>

        <br />

        <label asp-for="L_Name"></label>
        <input asp-for="L_Name" />
        <span asp-validation-for="L_Name"></span>

        <br />
        <input name="id" value="@Model.Id" type="hidden" />
        <input type="submit" value="Add Student" />
    </font>
</form>
