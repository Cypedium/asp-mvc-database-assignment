@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<h1>Create Index</h1>
<hr />
<br />
<a asp-action="Create" type="button" class="btn btn-success">Create Course</a>

<hr />
<br />
@ViewBag.msg
<br />
<table class="table table-striped">

    @foreach (var item in Model)
    {
        <tr id="@("CourseId" + item.Id)">
            <td>@item.Title</td>
            <td>@item.Description</td>
            @*<td>@item.Teacher</td>*@
            @*<td>@item.Grades</td>
            <td>@item.Student_Course_Maps</td>*@
            <td><a asp-route-id="@item.Id" asp-action="Details" type="button" class="btn btn-info">Details</a></td>
            <td><a asp-route-id="@item.Id" asp-action="Remove" type="button" class="btn btn-danger">Remove</a></td>
            <td><a asp-route-id="@item.Id" asp-action="Edit" type="button" class="btn btn-warning">Rename</a></td>
        </tr>
    }

</table>


